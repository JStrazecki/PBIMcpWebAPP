{
  "integrations": {
    "powerbi-mcp-enterprise": {
      "type": "remote_mcp_server",
      "name": "Power BI MCP Enterprise",
      "description": "Secure enterprise gateway to Power BI workspaces and datasets via Azure API Management",
      "authentication": {
        "type": "oauth2",
        "provider": "microsoft",
        "authorization_url": "https://pbimcp.azurewebsites.net/powerbi-mcp/authorize",
        "token_url": "https://login.microsoftonline.com/YOUR-TENANT-ID/oauth2/v2.0/token",
        "client_id": "5bdb10bc-bb29-4af9-8cb5-062690e6be15",
        "scopes": ["https://analysis.windows.net/powerbi/api/.default"],
        "redirect_uri": "https://claude.ai/api/mcp/auth_callback"
      },
      "endpoints": {
        "base_url": "https://pbimcp.azurewebsites.net/powerbi-mcp",
        "health": "/health",
        "status": "/mcp/status",
        "workspaces": "/mcp/workspaces",
        "datasets": "/mcp/datasets",
        "query": "/mcp/query"
      },
      "capabilities": [
        "list_powerbi_workspaces",
        "get_powerbi_datasets", 
        "execute_powerbi_query",
        "health_monitoring"
      ],
      "rate_limits": {
        "requests_per_minute": 100,
        "requests_per_day": 10000
      },
      "security": {
        "jwt_validation": true,
        "cors_enabled": true,
        "rate_limiting": true,
        "audit_logging": true
      }
    }
  }
}