{
  "integrations": {
    "powerbi-mcp-simple": {
      "type": "remote_mcp_server",
      "name": "Power BI MCP Simple",
      "description": "Simple MCP server for Power BI - no authentication required",
      "authentication": {
        "type": "none"
      },
      "endpoints": {
        "base_url": "https://pbimcp.azurewebsites.net",
        "health": "/health",
        "workspaces": "/workspaces",
        "datasets": "/datasets",
        "query": "/query"
      },
      "capabilities": [
        "list_powerbi_workspaces",
        "get_powerbi_datasets", 
        "execute_powerbi_query",
        "health_monitoring"
      ],
      "rate_limits": {
        "requests_per_minute": 100,
        "requests_per_day": 10000
      },
      "security": {
        "jwt_validation": false,
        "cors_enabled": true,
        "rate_limiting": false,
        "audit_logging": false
      }
    }
  }
}